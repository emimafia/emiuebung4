<?xml version="1.0"?>
<!DOCTYPE svg>
<svg xmlns="http://www.w3.org/2000/svg" version="1.1" xmlns:xlink="http://www.w3.org/1999/xlink" width="25cm" height="25cm" viewBox="0 0 2500 2500">
	<defs>
  	<symbol id="tree">
    	<path d="M 1000 200 Q 950 400 800 500 Q 600 600 750 650 T 700 850 Q 400 1100 600 1100 T 500 1400 Q 250 1600 450 1600 T 850 1600 Q 950 1600 950 1700" stroke="green" stroke-width="4" fill="none" />
		</symbol>
    <symbol id="ornament">
    	<circle r="50" cx="50" cy="50" />
    </symbol>
    <symbol id="rotatingstar">
    	<polygon fill="gold" stroke="0" stroke-width="2" points="100 0 42 180 195 70 5 70 158 180" >
      	<animateTransform attributeName="transform" attributeType="XML" type="rotate" from="0 100 100" to="360 100 100" dur="10s" repeatCount="1"/>
      </polygon>
    </symbol>
    <symbol id="star">
    	<polygon fill="gold" stroke="0" stroke-width="2" points="100 0 42 180 195 70 5 70 158 180" />
    </symbol>
	  <script>
	  	<![CDATA[
	      var rotating = 0;
	      function changeColor(ornament) {
	      	if(ornament.style.fill == "red") {
						ornament.setAttribute("style", "fill:orange");
					}
					else {
						ornament.setAttribute("style", "fill:red");
					}
	      }
	      function turnaround(star){
					if(rotating == 0){
						star.setAttribute("xlink:href","#rotatingstar");
						rotating = 1;
					}
					else{
						star.setAttribute("xlink:href","#star");
						rotating = 0;
					}
				}
	    ]]>
	  </script>
  </defs>
	<use xlink:href="#tree" />
  <use xlink:href="#tree" transform="matrix(-1,0,0,1,2000,0)"/>
  <use xlink:href="#ornament" x="1000" y="450" style="fill:red" id="ornament4" onclick="changeColor(this)"/>
  <use xlink:href="#ornament" x="800" y="750" style="fill:red" id="ornament0" onclick="changeColor(this)"/>
  <use xlink:href="#ornament" x="1150" y="950" style="fill:red" id="ornament1" onclick="changeColor(this)"/>
  <use xlink:href="#ornament" x="650" y="1350" style ="fill:red" id="ornament2" onclick="changeColor(this)"/>
  <use xlink:href="#ornament" x="1250" y="1400" style="fill:red" id="ornament3" onclick="changeColor(this)" />
  <use xlink:href="#star" transform="translate(900,60)" id='star0' onmouseover="turnaround(this)" onmouseout="turnaround(this)"/>
  <use xlink:href="#star" transform="scale(0.5),translate(1500,2000)" id='star1' onmouseover="turnaround(this)" />
  <use xlink:href="#star" transform="scale(0.5),translate(2000, 1500)" id='star2' onmouseover="turnaround(this)" />
  <use xlink:href="#star" transform="scale(0.5),translate(2000,2500)" id='star3' onmouseover="turnaround(this)" /> <!-- onmouseout="turnaround(this)" -->
</svg>